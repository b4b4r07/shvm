#!/usr/bin/env bash

if [[ $_ == $0 ]]; then
  cat << EOS
bashvm-init must be sourced from shell, instead of executable command.
Add the following line to $HOME/.bash_profile, and restart your shell.

  source $BASHVM_HOME/bin/bashvm-init

EOS
  exit 1
fi

export BASHVM_HOME=${BASHVM_HOME:-$HOME/.bashvm}
export PATH="$(readlink -f $(dirname $BASH_SOURCE)):$PATH"

bashvm_die() {
  echo "$@" >&2
  exit 1
}
export -f bashvm_die

bashvm() {
  case "$1" in
  list)
    shift
    bashvm-list "$@"
    ;;
  use)
    shift
    bashvm-use "$@"
    ;;
  fetch)
    shift
    bashvm-fetch "$@"
    ;;
  install)
    shift
    bashvm-install "$@"
    ;;
  uninstall)
    shift
    bashvm-uninstall "$@"
    ;;
  help)
    shift
    bashvm-help "$@"
    ;;
  --help)
    shift
    bashvm-help
    ;;
  --version)
    shift
    echo "bashvm version 0.0.0"
    ;;
  -*|--*)
    echo "Unrecognized option: $1" >&2
    return 1
    ;;
  *)
    echo "Unrecognized command: $1" >&2
    return 1
    ;;
  esac
}
export -f bashvm
