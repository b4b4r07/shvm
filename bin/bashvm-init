#!/usr/bin/env bash

if [[ $_ == $0 ]]; then
  cat << EOS
bashvm-init must be sourced from shell, instead of executable command.
Add the following line to $HOME/.bash_profile, and restart your shell.

  source $BASHVM_HOME/bin/bashvm-init

EOS
  exit 1
fi

export BASHVM_HOME=${BASHVM_HOME:-$HOME/.bashvm}
export PATH="$(readlink -f $(dirname $BASH_SOURCE)):$PATH"

bashvm_die() {
  echo "$@" >&2
  exit 1
}
export -f bashvm_die

bashvm_use() {
  local install=
  local default=
  local bash_version=

  while test $# != 0; do
    case "$1" in
    --help)
      bashvm-use --help
      return 0
      ;;
    --install)
      install=t
      ;;
    --default)
      default=t
      ;;
    -*|--*)
      echo "Unrecognized option: $1" >&2
      return 1
      ;;
    *)
      bash_version="${1#bash-}"
      ;;
    esac
    shift
  done

  if [ -z "$bash_version" ]; then
    bashvm-use --help
    return 1
  fi

  [[ -n "$install" ]] && bashvm-install "$bash_version"

  if ! [[ -d "$BASHVM_HOME/usr/bash-${bash_version}" ]]; then
    echo "Unknown bash version: bash-${bash_version}." >&2
    return 1
  fi

  if [[ -n "$default" ]]; then
    test -h "$BASHVM_HOME/bin/bash" && unlink "$BASHVM_HOME/bin/bash"
    ln -s "../usr/bash-$bash_version/bin/bash" "$BASHVM_HOME/bin/bash"
  fi

  local found=
  for path in ${PATH//:/ }; do
    if [[ "$path" =~ "$BASHVM_HOME/usr/bash-" ]]; then
      found=t
      break;
    fi
  done
  if [[ -z $found ]]; then
    export PATH="$BASHVM_HOME/usr/bash-${bash_version}/bin:$PATH"
  else
    export PATH="${PATH/$path/$BASHVM_HOME/usr/bash-${bash_version}/bin}"
  fi

  echo "Switched to bash-${bash_version}"
}
export -f bashvm_use

bashvm() {
  case "$1" in
  list)
    shift
    bashvm-list "$@"
    ;;
  use)
    shift
    bashvm_use "$@"
    ;;
  fetch)
    shift
    bashvm-fetch "$@"
    ;;
  install)
    shift
    bashvm-install "$@"
    ;;
  uninstall)
    shift
    bashvm-uninstall "$@"
    ;;
  help)
    shift
    bashvm-help "$@"
    ;;
  --help)
    shift
    bashvm-help
    ;;
  --version)
    shift
    echo "bashvm version 0.0.0"
    ;;
  -*|--*)
    echo "Unrecognized option: $1" >&2
    return 1
    ;;
  *)
    echo "Unrecognized command: $1" >&2
    return 1
    ;;
  esac
}
export -f bashvm
